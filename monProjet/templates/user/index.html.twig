{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% if error is defined %}
        <div class="alert alert-danger" role="alert"> {{ error }}</div>
    {% endif %}

    <h1 class="text-center">Index User</h1>
    <center>
        <a class="btn btn-info" href={{ path('user_new') }}>Ajouter User</a>
    </center>

    <table class="table table-striped table-info text-center my-4">
        <thead>
            <tr>
                <th><h4>Email</h4></th>
                <th><h4>Nom</h4></th>
                <th><h4>Prenom</h4></th>
                <th><h4>Date d'anniversaire</h4></th>
                <th><h4>Date d'inscription</h4></th>
                <th><h4>Btn</h4></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateAnniversaire ? user.dateAnniversaire|date('Y-m-d') : '' }}</td>
                <td>{{ user.dateInscription ? user.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('user_show', {'email': user.id}) }}">Consulter</a>
                    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
