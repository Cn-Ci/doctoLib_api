{% extends 'base.html.twig' %}

{% block title %} Voici les produits de {{ user.nom }} {% endblock %}
{% block body %}

<div class="container">
    <div class="row">
        <div class="col-2 mt-3">
            <img src="http://placehold.it/100x100" alt="image de {{ user.nom }}">
        </div>
        <div class="col-6 mt-3">
            <h1>{{ user.nom }} {{ user.prenom }}</h1>
            <p>Son adresse email : {{ user.email }}</p>
            <p>Sa date d'anniversaire : {{ user.dateAnniversaire |date("m/d/Y") }}</p>
            <p>Sa date d'inscription : {{ user.dateInscription |date("m/d/Y") }}</p>
        </div>   
    </div>
    <center>
        <a class="btn btn-info m-3" href="{{ path('list_users') }}">back to list</a>  
    </center> 
</div>

  

{% endblock %}