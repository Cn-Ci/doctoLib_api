{% extends 'SymprodTemplates/base.html.twig' %}

{% block title %}Nos magnifiques appartements {% endblock %}
{% block body %}

<div class="container">
    <h2 class="h1 mt-3 mb-4">Voici les appartements de nos clients</h2>


    <div class="row">

    {% for ad in ads %}
    {% set url = path('symprod_show', {'slug': ad.slug }) %}
        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-heeder text-center">
                    {{ ad.rooms }} chambres , <strong> {{ ad.price }} € / nuit</strong><br>
                    <small>Pas encore noté</small>
                </div>
                <a href="{{ url }}">
                    <img src= {{ ad.coverImage }} alt="image"
                    style="height: 200px; width: 100%; display: block">
                </a>

                <div class="card-body">
                    <h4 class="card-title"> 
                        <a href="{{ url }}">
                            {{ ad.title}}
                        </a>
                    </h4>
                    <p class="card-text">
                         {{ ad.introduction }}
                    </p>
                    <a href="{{ url }}" class="btn btn-info">En savoir plus !</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
    

{% endblock %}